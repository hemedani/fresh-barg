// ABOVE 704px (Smaller tablets) 
@media (min-width 704px)
  .layout
    grid-template-columns 4.5vw 1fr
    .menu-btn
      display none
    .pages-header
      grid-column 2/-1
    .sidebar
      width 4.5vw
      grid-row 1/-1
      grid-column 1/2
      display flex
      justify-content center
      position static
      border-top-left-radius 20px
      transform translateX(0)
      background Blue
      svg
        fill white
      span
        color white
    main
      grid-column 2/3
        
//ABOVE 944px (Tablets) 
@media (min-width 944px)
  .login-page 
    .login
      width 35vw
    .background
      max-height 100vh
      max-width 65vh
      display flex
      align-items center
      justify-content center
      img
        max-width 100%
       
      

 



