@require('./variable.styl')
@require('./fontSize.styl')
  .layout
    display grid 
    grid-template-rows 55px 1fr
    background-color #fff
    position relative  
    .pages-header
      display flex
      align-content center
      grid-column 1/span 3
      background-color neutralLightest
      padding 10px 0
      .container
        display flex
        justify-content space-between
        align-items center
        .menu-btn
          border none
          background-color neutralLightest
          width 25px
          height 25px
          cursor pointer
        svg
          width 100%
          height 100%
    .sidebar
      width 100vw
      height 100vh
      max-height 100vh
      grid-column 1/span 3
      position absolute
      padding: 10px 20px
      top 45px
      background neutralLightest
      transform translateX(100%)
      transition transform 0.7s linear
      z-index 2
    .active
      transform translateX(0%)
      .container
        .sidebar-item
          display flex
          flex-direction column
          gap 20px
          font-size smaller
          &:nth-child(1)
            margin-bottom 40px  
          li a
            display flex
            flex-direction column
            justify-content center
            align-items center
            color Blue
    main
      grid-column: 1/span 3
      padding 20px 0
      .main-header
        display flex
        justify-content space-between
        align-items center
        .create-letter-btn
          display flex
          align-items center
          justify-content center
          background-color darkBlue
          gap 0.5rem
          color White
          border 1px solid #89959f
          border-radius 1.5rem
          padding 0.7rem 2rem
          font-size larger
          cursor pointer
          &:hover
            background-color darkerBlue
          svg
            fill white
            width 30px
            height 30px
            stroke currentColor
      .search-box-wrapper
        width: 100%
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        align-items: center
        background: #ffffff
        border-radius: 10px
        box-sizing: border-box
        padding: 10px 1rem
        box-shadow: 0px 2px 4px 1px #b7b7b7
      
     
