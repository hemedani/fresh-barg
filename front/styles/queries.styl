// ABOVE 704px (Smaller tablets) 
@media (min-width 704px)
  .layout
    .menu-btn
      display none
    .pages-header
      flex 0 0 auto
    .sidebar
      display flex
      flex 1
      justify-content center
      position static
      border-top-left-radius 20px
      transform translateY(-3.5rem)
      background-color Blue
      height 101vh
      .sidebar-item
        display flex
        flex-direction column
        li
          border-bottom none
          &:first-child 
            margin-bottom 20px
        a
          display flex
          align-items center
          justify-content center
          flex-direction column
          font-size small
          text-wrap nowrap
          svg 
            fill White
      span
        color white  
//ABOVE 944px (Tablets) 
@media (min-width 944px)
  .login-page 
    .login
      width 35vw
    .background
      max-height 100vh
      max-width 65vh
      display flex
      align-items center
      justify-content center
      img
        max-width 100%
