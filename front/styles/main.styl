@require('./variable.styl')
@require('./fontSize.styl')
@font-face 
  font-family IranSans_Black
  src url(/fonts/iran-sans/IRANSansWeb_Black.woff)


@font-face 
  font-family IranSans_Bold
  src url(/fonts/iran-sans/IRANSansWeb_Bold.woff)

@font-face 
  font-family IranSans_Light
  src url(/fonts/iran-sans/IRANSansWeb_Light.woff)

@font-face 
  font-family IranSans_Medium
  src url(/fonts/iran-sans/IRANSansWeb_Medium.woff)

@font-face 
  font-family IranSans_UltraLight
  src url(/fonts/iran-sans/IRANSansWeb_UltraLight.woff)

@font-face 
  font-family IranSans_Web
  src url(/fonts/iran-sans/IRANSansWeb.woff)

@font-face 
  font-family IranSans_Regular
  src url(/fonts/iran-sans/IRANSansWeb.woff)

*
  direction rtl
  box-sizing border-box
  font-family IranSans_Regular
  margin 0
  padding 0
  outline none
  text-transform capitalize

body
  overflow-x hidden
  min-height 100vh 
  outline none
  li
    list-style none
  a
    text-decoration none
.default-btn
  background-color #0053c0
  color #F1FFFE
  text-align center
  border none
  border-radius 10px
  padding 5px 10px
  cursor pointer
  font-size small
  
.container
  width 95%
  margin 0 auto  
.card 
  min-width 20vw
  max-width 80vw
  position relative
  border-top 3px solid Primary
  background White
  border-top 3px solid greenLighter
  .card-icon
    display flex
    justify-content center
    align-items center
    width 50px
    height 50px
    background-color #c4c4c4
    border-radius 100%
    position absolute
    top -23px
    right 50%
    transform translateX(50%)
    svg 
      width 40px
      height 40px
      padding 5px
      background-color Primary
      border-radius 100%
      fill White
  h2
    font-size medium
    font-weight 700
    padding 20px 10px 15px 10px
    border-bottom 1px solid neutralLighter    
.add-letter-form,
.add-province-form
  padding 10px 20px
  label
    font-size smaller
    cursor pointer
    user-select none
  input ,textarea
    border 1px solid neutralLighter
    width 100%
    border-radius 10px
    text-align right
    padding 5px 10px
    width 100%
    resize none
    font-size small
    &:hover
      border-color blueAzure
  textarea
    min-height: 3rem  
    height 10vh 
.forms-btn
  background-color Primary  
  border none
  color White
  padding 11px 32px
  border-radius 24px
  margin-top 10px
  cursor pointer
.data-list
  display flex
  flex-wrap wrap
  width 100%
  gap 20px
  margin-top 20px
.setting-list-wrapper
  margin-top 10px
  position relative 
.regular-card-wrapper 
  min-width 31.74%
  flex-grow 1
  display flex
  flex-direction column
  background-color neutralLightest
  border-radius 10px
  box-shadow 0px 2px 4px 1px neutralLighter
  &:last-child
    width 31.74%
  .regular-card-info
    display flex
    justify-content center
    align-items center
    flex-direction column
    gap 10px
    font-size medium
    border-bottom 1px solid #89959f
    padding 20px 0
    font-size small
    .pe-data-value
      display flex
      align-items center
      justify-content center
      width 50%
      padding 10px
      border-radius 0.9375rem
      white-space nowrap
      color #0053c0
      background-color #c1daff
    
  .regular-card-btn
    display flex
    button
      width 50%
      padding: 0.7rem 2rem
      color #89959f
      font-size small
      border none
      cursor pointer
      &:first-child
        border-left 1px solid #89959f
    